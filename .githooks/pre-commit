#!/usr/bin/env bash
# Guard UTF-8 cleanliness (PowerShell script handles details)
if command -v pwsh >/dev/null 2>&1; then
  pwsh -NoProfile -File ./scripts/check-encoding.ps1 || exit 1
elif command -v powershell >/dev/null 2>&1; then
  powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/check-encoding.ps1 || exit 1
else
  echo "No PowerShell found; skipping encoding check." >&2
fi
