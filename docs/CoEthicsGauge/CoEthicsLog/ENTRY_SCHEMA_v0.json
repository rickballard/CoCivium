{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CoEthicsLog Entry v0",
  "type": "object",
  "required": [
    "brand",
    "region",
    "lens",
    "overall_score",
    "metrics",
    "evidence",
    "contributors",
    "timestamps"
  ],
  "properties": {
    "brand": {
      "type": "object",
      "required": [
        "id",
        "display_name",
        "sector"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "display_name": {
          "type": "string"
        },
        "sector": {
          "type": "string"
        }
      }
    },
    "region": {
      "type": "object",
      "required": [
        "code"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "owners": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "group_id",
          "group_display_name",
          "ownership_type"
        ],
        "properties": {
          "group_id": {
            "type": "string"
          },
          "group_display_name": {
            "type": "string"
          },
          "ownership_type": {
            "type": "string"
          }
        }
      }
    },
    "lens": {
      "type": "object",
      "required": [
        "id",
        "version"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "overall_score": {
      "type": "object",
      "required": [
        "numeric",
        "band",
        "nods_count",
        "spanks_count"
      ],
      "properties": {
        "numeric": {
          "type": "number"
        },
        "band": {
          "type": "string"
        },
        "nods_count": {
          "type": "integer"
        },
        "spanks_count": {
          "type": "integer"
        }
      }
    },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "metric_id",
          "axis",
          "score_numeric",
          "weight",
          "mood",
          "summary"
        ],
        "properties": {
          "metric_id": {
            "type": "string"
          },
          "axis": {
            "type": "string"
          },
          "score_numeric": {
            "type": "number"
          },
          "weight": {
            "type": "number"
          },
          "mood": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          }
        }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "source_type",
          "source_name"
        ],
        "properties": {
          "source_type": {
            "type": "string"
          },
          "source_name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "contributors": {
      "type": "object",
      "required": [
        "circle_id",
        "conflicts_of_interest"
      ],
      "properties": {
        "circle_id": {
          "type": "string"
        },
        "ai_tools_used": {
          "type": "string"
        },
        "conflicts_of_interest": {
          "type": "string"
        }
      }
    },
    "timestamps": {
      "type": "object",
      "required": [
        "created_at_utc",
        "updated_at_utc"
      ],
      "properties": {
        "created_at_utc": {
          "type": "string"
        },
        "updated_at_utc": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}