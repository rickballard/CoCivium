{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CoSuite Asset Graph",
  "type": "object",
  "required": ["nodes", "links"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","label"],
        "properties": {
          "id":    { "type": "string" },
          "label": { "type": "string" },
          "group": { "type": "string" }
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source","target"],
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "label":  { "type": "string" }
        }
      }
    }
  }
}
